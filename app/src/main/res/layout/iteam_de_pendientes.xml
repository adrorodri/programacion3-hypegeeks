<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/primeraFiguritaDePendinetes"
            android:layout_width="103dp"
            android:layout_height="120dp"
            android:background="@drawable/fondo_listas" />

        <ImageView
            android:id="@+id/iconoDePendientes"
            android:layout_width="82dp"
            android:layout_height="76dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="112dp"
            android:background="@drawable/fondo_titulo" />

        <ImageView
            android:id="@+id/segundaFiguritaDePendientes"
            android:layout_width="103dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="74dp"
            android:background="@drawable/fondo_listas" />

        <ImageButton
            android:id="@+id/botonDePendientes"
            android:layout_width="58dp"
            android:layout_height="69dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>