<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tienda"
    android:background="@drawable/fondo_todo">

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textAlignment="center"
        android:text="TIENDA"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:background="@drawable/fondo_titulo"/>

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonTienda"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_action_busqueda"
            android:background="@drawable/fondo_titulo"/>

        <EditText
            android:id="@+id/buscadorTienda"
            android:layout_width="254dp"
            android:layout_marginStart="5dp"
            android:layout_height="50dp"
            android:background="@drawable/fondo_titulo"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaDeTienda"
        android:layout_width="305dp"
        android:layout_height="311dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:background="@drawable/fondo_listas"/>

</RelativeLayout>